<Window x:Class="MouseKeyPlayback.Views.CreateWaitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MouseKeyPlayback.Views"
        mc:Ignorable="d"
        Title="CreateWaitWindow" Height="161.6" Width="247.2">
    <Grid>
        <Label Content="Enter the wait time:" HorizontalAlignment="Left" Margin="55,25,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>
        <TextBox x:Name="tbxWait" Height="21" Margin="55,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="72" Text="200"/>
        <Button x:Name="btnOk" Content="OK" HorizontalAlignment="Left" Margin="64,0,0,23" VerticalAlignment="Bottom" Width="60" Click="BtnOk_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="132,0,0,23" VerticalAlignment="Bottom" Width="60" Click="BtnCancel_Click"/>
        <Label Content="ms" HorizontalAlignment="Left" Margin="132,51,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
